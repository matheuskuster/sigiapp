      [
        '_setAccount', 'UA-6065217-11'
      ],
      ['_trackPageview']
    ];
    (function (d, t) {
      var g = d.createElement(t),
        s = d.getElementsByTagName(t)[0];
      g.src = 'https://www.google-analytics.com/ga.js';
